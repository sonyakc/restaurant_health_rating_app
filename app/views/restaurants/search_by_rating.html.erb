<html>
<title>Search by Grade</title>

<h3>Select a grade</h3>
<%= form_tag restaurants_display_path, method: :get do %>
    <p>
      <%= select('', :rating, ["A", "B", "C", "Z"]) %>
      <!--<%= text_field_tag :rating, params[:rating] %>-->
      <%= submit_tag "Search", class: "btn btn-default btn-lg", data: { disable_with: "Please wait..." },
          onclick: 'mixpanel.track("Submitted search by restaurant grade", { "grade" : params[:rating] });'%>
    </p>
<% end %>
</html>